<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relat_ve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/custom_notification_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/notification" />

    <TextView
        android:id="@+id/custom_notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/custom_notification_iv"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"
        android:layout_toRightOf="@id/custom_notification_iv"
        android:background="@drawable/custom_notification_shape"
        android:padding="4dp"
        android:text="10"
        android:textColor="#fff"
        android:textSize="12sp" />


</RelativeLayout>